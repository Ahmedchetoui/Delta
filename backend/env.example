# Configuration du serveur
PORT=5000
NODE_ENV=development

# Base de donn√©es MongoDB
MONGODB_URI=mongodb://localhost:27017/delta-fashion

# JWT Secret
JWT_SECRET=votre-secret-jwt-super-securise

# Configuration des uploads
UPLOAD_PATH=../uploads

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-app

# Configuration Cloudinary (optionnel - pour optimisation des images)
# Laisser vide pour utiliser le stockage local
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_CLOUD_NAME=votre-cloud-name
CLOUDINARY_API_KEY=votre-api-key
CLOUDINARY_API_SECRET=votre-api-secret
CLOUDINARY_FOLDER=delta-fashion/uploads

# URL publique du serveur (pour les images en production)
PUBLIC_BASE_URL=https://votre-domaine.com
